{
  "name": "tastify-backend",
  "version": "1.0.0",
  "description": "Serverless backend for Tastify recipe parsing",
  "main": "index.js",
  "scripts": {
    "dev": "tsx dev-server.ts",
    "dev:vercel": "vercel dev --listen 3000",
    "build": "tsc",
    "start": "node dist/index.js",
    "deploy": "vercel --prod",
    "test": "curl -X POST http://localhost:3000/api/parseRecipe -H \"Content-Type: application/json\" -d '{\"videoUrl\": \"https://www.tiktok.com/@user/video/123\"}'"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "axios": "^1.7.2",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.12",
    "@vercel/node": "^3.2.1",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vercel": "^35.2.4"
  }
}
